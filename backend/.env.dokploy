# Configuración de Variables de Entorno para Dokploy
# Backend (FastAPI) Environment Variables

# Configuración de la aplicación
PROJECT_NAME={{ project.PROJECT_NAME }}
VERSION={{ project.VERSION }}
ENVIRONMENT=production

# API Keys y Servicios Externos
OPENROUTER_API_KEY={{ project.OPENROUTER_API_KEY }}
OPENAI_API_KEY={{ project.OPENAI_API_KEY }}

# URLs de servicios
API_BASE_URL={{ project.API_BASE_URL }}
FRONTEND_URL={{ project.FRONTEND_URL }}

# Configuración de CORS
ALLOWED_ORIGINS={{ project.ALLOWED_ORIGINS }}

# Redis Configuration
REDIS_URL={{ project.REDIS_URL }}
REDIS_HOST={{ project.REDIS_HOST }}
REDIS_PORT={{ project.REDIS_PORT }}
REDIS_DB={{ project.REDIS_DB }}

# Base de datos (para uso futuro)
DATABASE_URL={{ project.DATABASE_URL }}

# AWS S3 Configuration (opcional)
AWS_ACCESS_KEY_ID={{ project.AWS_ACCESS_KEY_ID }}
AWS_SECRET_ACCESS_KEY={{ project.AWS_SECRET_ACCESS_KEY }}
AWS_REGION={{ project.AWS_REGION }}
S3_BUCKET_NAME={{ project.S3_BUCKET_NAME }}

# Configuración de logging
LOG_LEVEL={{ project.LOG_LEVEL }}

# Security
SECRET_KEY={{ project.SECRET_KEY }}
JWT_SECRET_KEY={{ project.JWT_SECRET_KEY }}

# Feature Flags
ENABLE_DOCS={{ project.ENABLE_DOCS }}
ENABLE_CORS={{ project.ENABLE_CORS }}

# Monitoring
SENTRY_DSN={{ project.SENTRY_DSN }}
