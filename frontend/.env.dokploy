# Configuraci√≥n de Variables de Entorno para Dokploy
# Frontend (Next.js) Environment Variables

# API Configuration
NEXT_PUBLIC_BACKEND_BASE_URL={{ project.NEXT_PUBLIC_BACKEND_BASE_URL }}
NEXT_PUBLIC_API_URL={{ project.NEXT_PUBLIC_API_URL }}

# OpenRouter API Configuration (required for ChatBot functionality)
NEXT_PUBLIC_OPENROUTER_API_KEY={{ project.NEXT_PUBLIC_OPENROUTER_API_KEY }}

# Application Configuration
NEXT_PUBLIC_APP_NAME={{ project.NEXT_PUBLIC_APP_NAME }}
NEXT_PUBLIC_APP_VERSION={{ project.NEXT_PUBLIC_APP_VERSION }}

# Domain Configuration
NEXT_PUBLIC_DOMAIN={{ project.NEXT_PUBLIC_DOMAIN }}

# Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Analytics (opcional)
NEXT_PUBLIC_GOOGLE_ANALYTICS={{ project.NEXT_PUBLIC_GOOGLE_ANALYTICS }}

# Feature Flags (opcional)
NEXT_PUBLIC_ENABLE_CHAT={{ project.NEXT_PUBLIC_ENABLE_CHAT }}
NEXT_PUBLIC_ENABLE_ANALYTICS={{ project.NEXT_PUBLIC_ENABLE_ANALYTICS }}