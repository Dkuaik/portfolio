# Configuración de Producción para Frontend
# Variables de entorno para Dokploy

# OpenRouter API Configuration (required for ChatBot functionality)
NEXT_PUBLIC_OPENROUTER_API_KEY={{ project.NEXT_PUBLIC_OPENROUTER_API_KEY }}

# API Configuration
NEXT_PUBLIC_API_URL={{ project.NEXT_PUBLIC_API_URL }}

# Application Configuration
NEXT_PUBLIC_APP_NAME={{ project.NEXT_PUBLIC_APP_NAME }}
NEXT_PUBLIC_APP_VERSION={{ project.NEXT_PUBLIC_APP_VERSION }}

# Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Domain Configuration
NEXT_PUBLIC_DOMAIN={{ project.NEXT_PUBLIC_DOMAIN }}

# Analytics (opcional)
NEXT_PUBLIC_GOOGLE_ANALYTICS={{ project.NEXT_PUBLIC_GOOGLE_ANALYTICS }}